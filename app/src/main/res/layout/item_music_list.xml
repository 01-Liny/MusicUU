<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cv_music"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_margin="3dp"
    android:background="?attr/selectableItemBackground"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_item_music"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:contentDescription=""/>

        <RelativeLayout
            android:id="@+id/rl_item_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_item_song_name"
                android:layout_width="90dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:textColor="@color/primary_text"
                android:textSize="15sp"
                android:textStyle="bold"
                android:text="11111"
                android:layout_alignBaseline="@+id/tv_popup_menu"
                android:layout_alignBottom="@+id/tv_popup_menu"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"/>

            <TextView
                android:id="@+id/tv_item_singer"
                android:layout_width="60dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="11111"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignLeft="@+id/tv_item_song_name"
                android:layout_alignStart="@+id/tv_item_song_name"
                android:layout_marginBottom="32dp"/>

            <TextView
                android:id="@+id/tv_popup_menu"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="17dp"
                android:gravity="center"
                android:text="@string/vertical_ellipsis"
                android:textColor="@color/primary_text"
                android:textSize="21sp"
                android:textStyle="bold"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>